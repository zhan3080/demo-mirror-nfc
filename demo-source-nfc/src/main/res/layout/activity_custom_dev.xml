<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/btn_text_size_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_text_size_normal" />

            <TextView
                android:id="@+id/tv_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_text_size_normal" />
        </LinearLayout>

        <include layout="@layout/include_divider_line" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="添加主设备"
            android:textColor="@android:color/black"
            android:textSize="@dimen/btn_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ip："
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_text_size" />

            <EditText
                android:id="@+id/ip_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入主设备ip地址"
                android:inputType="text"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="端口："
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_text_size" />

            <EditText
                android:id="@+id/port_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="主设备端口"
                android:inputType="number"
                android:textSize="13sp" />

        </LinearLayout>

        <Button
            android:id="@+id/add_sub_devs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="添加远端设备"
            android:textColor="@android:color/black"
            android:textSize="@dimen/btn_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="远端设备列表"
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_text_size" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/shape_browse_divider"
                android:padding="1dp"
                tools:listitem="@layout/item_browse" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3.2">

                <RadioGroup
                    android:id="@+id/rg_resolution"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_resolution_height"
                        style="@style/RadioButtonStyle"
                        android:checked="true"
                        android:text="屏幕分辨率：高" />

                    <RadioButton
                        android:id="@+id/rb_resolution_middle"
                        style="@style/RadioButtonStyle"
                        android:text="屏幕分辨率：中" />

                    <RadioButton
                        android:id="@+id/rb_resolution_low"
                        style="@style/RadioButtonStyle"
                        android:text="屏幕分辨率：自动" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rg_bitrate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_bitrate_height"
                        style="@style/RadioButtonStyle"
                        android:checked="true"
                        android:text="比特率：高" />

                    <RadioButton
                        android:id="@+id/rb_bitrate_middle"
                        style="@style/RadioButtonStyle"
                        android:text="比特率：中" />

                    <RadioButton
                        android:id="@+id/rb_bitrate_low"
                        style="@style/RadioButtonStyle"
                        android:text="比特率：低" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rg_mirror_audio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RadioButton
                        android:id="@+id/rb_mirror_audio_on"
                        style="@style/RadioButtonStyle"
                        android:checked="true"
                        android:text="音频：开" />

                    <RadioButton
                        android:id="@+id/rb_mirror_audio_off"
                        style="@style/RadioButtonStyle"
                        android:text="音频：关" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_start_multi_mirror"
                    style="@style/ButtonStyle"
                    android:text="开始镜像"
                    android:textSize="@dimen/btn_text_size_normal" />

                <Button
                    android:id="@+id/btn_append_multi_mirror"
                    style="@style/ButtonStyle"
                    android:text="追加镜像"
                    android:textSize="@dimen/btn_text_size_normal" />

                <Button
                    android:id="@+id/btn_remove_multi_mirror"
                    style="@style/ButtonStyle"
                    android:text="移除镜像"
                    android:textSize="@dimen/btn_text_size_normal" />

                <Button
                    android:id="@+id/btn_stop_multi_mirror"
                    style="@style/ButtonStyle"
                    android:text="结束镜像"
                    android:textSize="@dimen/btn_text_size_normal" />

                <Button
                    android:id="@+id/pause_multi_mirror"
                    style="@style/ButtonStyle"
                    android:text="暂停镜像"
                    android:textSize="@dimen/btn_text_size_normal" />

                <Button
                    android:id="@+id/resume_multi_mirror"
                    style="@style/ButtonStyle"
                    android:text="恢复镜像"
                    android:textSize="@dimen/btn_text_size_normal" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1、列表中点击绿色为选中，可对其进行操作追加和移除的操作\n2、长按可将设备移除出列表\n3、新增和结束镜像会把近端和远端的设备都新增或结束\n"
            android:textColor="@android:color/holo_red_light" />

        <FrameLayout
            android:id="@+id/sample_content_fragment1"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0px" />
    </LinearLayout>


</ScrollView>